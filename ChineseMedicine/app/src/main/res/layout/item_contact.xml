<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_letter"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:textColor="@color/gray_font_3"
        android:clickable="false"
        android:enabled="false"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/backgroud"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_contact_header"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tv_letter"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_launcher"/>
    
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111"
        android:layout_toRightOf="@id/iv_contact_header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/iv_contact_header"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="16sp"/>

</RelativeLayout>
