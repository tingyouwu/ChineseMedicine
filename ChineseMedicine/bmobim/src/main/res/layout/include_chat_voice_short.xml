<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_record_short"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@drawable/chat_top_voice_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_short"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/chat_icon_voice_short" />

    <TextView
        style="@style/style_text_white"
        android:layout_below="@id/iv_short"
        android:layout_centerHorizontal="true"
        android:text="@string/voice_short_tips"
        android:textSize="14sp" />

</RelativeLayout>