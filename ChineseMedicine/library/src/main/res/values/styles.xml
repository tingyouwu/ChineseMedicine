<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WindowStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Base.V7.Theme.AppCompat.Light">
        <!--Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBrownPrimary</item>
        <item name="colorAccent">@color/colorBrownPrimary</item>
        <item name="actionBarStyle">@style/ActionBarBaseStyle</item>
        <!--去掉actionbar阴影 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LaunchStyle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarBaseStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="height">50dip</item>
        <item name="elevation">0dp</item>
    </style>

</resources>